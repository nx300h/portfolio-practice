{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "scripts": {
    "start": "nodemon src/server.ts",
    "dev": "ts-node src/server.ts",
    "build": "tsc",
    "prod": "node dist/server.js"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "mysql2": "^3.11.3",
    "sequelize": "^6.37.4",
    "winston": "^3.15.0"
  }
}
